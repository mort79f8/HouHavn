@page
@model HouHavn.Web.Pages.Lists.BerthsModel

@{
    ViewData["Title"] = "Bådpladser";
}

<h1>Bådpladser</h1>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(Model => Model.Boat[0].Berth)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Boat[0].BerthNavigation.Bridge)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Boat[0].Name)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var boat in Model.Boat)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => boat.Berth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => boat.BerthNavigation.Bridge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => boat.Name)
            </td>
        </tr>
        }
    </tbody>
</table>

