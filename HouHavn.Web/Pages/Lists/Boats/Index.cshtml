@page
@model HouHavn.Web.Pages.Boats.IndexModel

@{
    ViewData["Title"] = "Liste over både";
}

<h2>Liste over både</h2>
<hr />

<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Boat[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Boat[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Boat[0].PropulsionType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Boat[0].BerthNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Boat[0].PersonNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Boat) {
        <tr>
            <td>
                <a asp-page="./Details" asp-route-id="@item.BoatId">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PropulsionType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BerthNavigation.BerthId)
            </td>
            <td>
                <a asp-page="../People/Details" asp-route-id="@item.PersonNavigation.PersonId">@Html.DisplayFor(modelItem => item.PersonNavigation.FullName)</a>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.BoatId">Redigér</a> |
                <a asp-page="./Details" asp-route-id="@item.BoatId">Detaljer</a> |
                <a asp-page="./Delete" asp-route-id="@item.BoatId" class="delete">Slet</a>
            </td>
        </tr>
}
    </tbody>
</table>
