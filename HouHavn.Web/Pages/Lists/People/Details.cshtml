@page
@model HouHavn.Web.Pages.Lists.People.DetailsModel

@{
    ViewData["Title"] = "Detaljer for kunde";
}

<h2>Detaljer for @Model.Person.FullName</h2>

<div>
    <hr />
    <h3>Stamoplysninger</h3>
    <p>
        @Html.DisplayFor(model => model.Person.FullName)
    </p>
    <p>
        @Html.DisplayFor(model => model.Person.Address)
    </p>

    <p>
        @Html.DisplayFor(model => model.Person.PostalCode) - @Html.DisplayFor(model => model.Person.City)
    </p>

    <p>
        @Html.DisplayFor(model => model.Person.Country)
    </p>

    <p>
        @Html.DisplayFor(model => model.Person.Email)
    </p>

    <p>
        @Html.DisplayFor(model => model.Person.PhoneNumber)
    </p>

    <p>
        @Html.DisplayFor(model => model.Person.Notes)
    </p>
    <br />
    <p>
        Kunde af havn: @(@Model.Person.Member == 1 ? "Ja" : "Nej")
    </p>

    <p>
        Medlem af bådlaug: @(@Model.Person.BoatGuild == 1 ? "Ja" : "Nej")
    </p>

    <p>
        Medlem af Jollelaug: @(@Model.Person.DingyGuild == 1 ? "Ja" : "Nej")
    </p>
    <br />
    <p>Både:</p>
    <p>
        @foreach (var boat in Model.Person.Boats)
        {
            <a asp-page="../Boats/Details" asp-route-id="@boat.BoatId">@boat.Name</a><br />
        }
    </p>
</div>
<div>
    <a class="button" asp-page="./Edit" asp-route-id="@Model.Person.PersonId">Redigér</a>
    <a class="button" href='javascript:history.go(-1)'>Tilbage</a>
    <a asp-page="./Delete" asp-route-id="@Model.Person.PersonId" class="delete button">Slet</a>
</div>
