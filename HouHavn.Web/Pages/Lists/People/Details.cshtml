@page
@model HouHavn.Web.Pages.Lists.People.DetailsModel

@{
    ViewData["Title"] = "Detaljer for kunde";
}

<h2>Detaljer for @Model.Person.FullName</h2>
<hr />
<div class="flex">
    <article>
        <h3>Stamoplysninger</h3>
        <dl>
            <dt>@Html.DisplayNameFor(model => model.Person.FullName)</dt>
            <dd>@Html.DisplayFor(model => model.Person.FullName)</dd>

            <dt>@Html.DisplayNameFor(model => model.Person.Address)</dt>
            <dd>@Html.DisplayFor(model => model.Person.Address)</dd>
            <dd>@Html.DisplayFor(model => model.Person.PostalCode) - @Html.DisplayFor(model => model.Person.City)</dd>
            <dd>@Html.DisplayFor(model => model.Person.Country)</dd>

            <dt>@Html.DisplayNameFor(model => model.Person.Email)</dt>
            <dd>@Html.DisplayFor(model => model.Person.Email)</dd>

            <dt>@Html.DisplayNameFor(model => model.Person.PhoneNumber)</dt>
            <dd>@Html.DisplayFor(model => model.Person.PhoneNumber)</dd>

            <dt>@Html.DisplayNameFor(model => model.Person.Notes)</dt>
            <dd>@Html.DisplayFor(model => model.Person.Notes)</dd>
        </dl>
    </article>
    <article>
        <h3>Tilhørsforhold</h3>
        <dl>
            <dt>@Html.DisplayNameFor(model => model.Person.Member)</dt>
            <dd>@(@Model.Person.Member == 1 ? "Ja" : "Nej")</dd>


            <dt>@Html.DisplayNameFor(model => model.Person.BoatGuild)</dt>
            <dd>@(@Model.Person.BoatGuild == 1 ? "Ja" : "Nej")</dd>

            <dt>@Html.DisplayNameFor(model => model.Person.DingyGuild)</dt>
            <dd>@(@Model.Person.DingyGuild == 1 ? "Ja" : "Nej")</dd>
        </dl>
    </article>
    <article>
        <h3>Både</h3>
        @if(Model.Person.Boats.Count > 0)
        {
            <p>
                @foreach (var boat in Model.Person.Boats)
                {
                    <a asp-page="../Boats/Details" asp-route-id="@boat.BoatId">@boat.Name</a><br />
                }
            </p>
        }
        else
        {
            <p>Kunden ejer ingen både</p>
        }
    </article>
</div>
<div>
    <a class="button" asp-page="./Edit" asp-route-id="@Model.Person.PersonId">Redigér</a>
    <a class="button" href='javascript:history.go(-1)'>Tilbage</a>
    <a asp-page="./Delete" asp-route-id="@Model.Person.PersonId" class="delete button">Slet</a>
</div>
